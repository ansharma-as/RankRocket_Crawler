# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=rankrocket

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Email Configuration (for verification and password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@rankrocket.com

# Redis Configuration (for background tasks)
REDIS_URL=redis://localhost:6379

# API Keys
GOOGLE_ANALYTICS_API_KEY=your-google-analytics-key
GOOGLE_SEARCH_CONSOLE_API_KEY=your-search-console-key
BING_WEBMASTER_API_KEY=your-bing-webmaster-key
PROXY_API_KEY=your-proxy-key

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "https://yourdomain.com" ]

# Crawler Settings
MAX_CONCURRENT_CRAWLS=10
CRAWL_TIMEOUT=30
USER_AGENT=RankRocket/1.0 (+https://rankrocket.com)